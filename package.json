{
  "name": "nexora-hug",
  "version": "1.0.0",
  "description": "Sistema automático de monetización con Hugging Face - Meta $30K MXN/mes",
  "main": "api/index.js",
  "scripts": {
    "start": "node api/index.js",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "dev:api": "cd api && nodemon index.js",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "install:all": "npm install && cd api && npm install && cd ../client && npm install"
  },
  "keywords": [
    "huggingface",
    "monetization",
    "ai",
    "spaces"
  ],
  "author": "Nexora Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
